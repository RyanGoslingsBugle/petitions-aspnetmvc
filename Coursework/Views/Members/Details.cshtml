@model Coursework.Models.MemberVM

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="profile-page-header mb-4">
        <div class="profile-page-text">
            <img src="@Html.DisplayFor(model => model.ImagePath)" class="img-thumbnail" />
            <h2>@Html.DisplayFor(model => model.Name)</h2>
            <p>@Html.DisplayFor(model => model.City)</p>
            <p>@Html.DisplayFor(model => model.Country)</p>
            <a class="btn btn-primary" href="/members">Back</a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <h4>Backed Causes</h4>
    </div>
    <div class="row">
        @if (Model.Causes == null)
        {
            <p class="lead">Nothing here yet!</p>
        }
        else
        {
            foreach (var cause in Model.Causes)
            {
                <div class="col-sm-2">
                    <div class="card">
                        <img class="card-img-top" src="@cause.ImageURL" />
                        <div class="card-body">
                            <h5 class="card-title">@cause.Title</h5>
                            <p class="card-subtitle">@cause.Member</p>
                            <p class="card-text">@cause.Description</p>
                            <a href="/causes/details/@cause.ID" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
