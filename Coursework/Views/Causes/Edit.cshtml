@model Coursework.Models.CauseVM

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Causes", FormMethod.Post, new { @class = "my-4", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <h4>Create a new cause</h4>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-row">
        <div class="col-md-6">

            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Give your campaign an exciting title." } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Describe the situation, and how you plan to address it." } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Pledge, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Pledge, new { htmlAttributes = new { @class = "form-control", placeholder = "What do you want your signers to do?" } })
                @Html.ValidationMessageFor(model => model.Pledge, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Target, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Target, new { htmlAttributes = new { @class = "form-control", placeholder = "Who should we send your signatures to?" } })
                @Html.ValidationMessageFor(model => model.Target, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Image, new { @class = "form-control-file", type = "file" })
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
            </div>

            <input type="submit" value="Save" class="btn btn-outline-primary" />

        </div>
        <div class="col-md-6">
            <img src="@Model.ImageURL" class="img-thumbnail m-auto d-none d-md-block" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
